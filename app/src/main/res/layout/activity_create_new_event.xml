<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Please enter the Venue details"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/eventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabel"
        android:layout_marginBottom="10dp"
        android:hint="Event Name"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/btnStartDate"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventName"
        android:layout_marginBottom="10dp"
        android:background="?attr/selectableItemBackground"
        android:padding="15dp"
        android:text="Select Start Date"/>

    <Button
        android:id="@+id/btnEndDate"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnStartDate"
        android:layout_marginBottom="10dp"
        android:background="?attr/selectableItemBackground"
        android:padding="15dp"
        android:text="Select End Date"/>

    <EditText
        android:id="@+id/eventCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEndDate"
        android:layout_marginBottom="10dp"
        android:hint="Currency"
        android:padding="15dp"
        android:text="USD"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/btnImagePick"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eventCurrency"
        android:layout_centerHorizontal="true"
        android:text="Pick a Pic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btnCreateEvent"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Create Event"/>

        <Button
            android:id="@+id/venue"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add Venue to the Event (Optional)"
            android:visibility="visible"/>
    </LinearLayout>
</RelativeLayout>
