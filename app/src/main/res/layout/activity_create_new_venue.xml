<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Please enter the Venue details"
        android:textColor="@color/colorAccent"/>

    <EditText
        android:id="@+id/venueName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLabel"
        android:layout_marginBottom="10dp"
        android:hint="Venue Name"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/venueLat"
        android:layout_width="match_parent"
        android:text="40.690302"
        android:layout_height="wrap_content"
        android:layout_below="@id/venueName"
        android:layout_marginBottom="10dp"
        android:hint="Venue Latitude"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/venueLong"
        android:layout_width="match_parent"
        android:text="-73.950266"
        android:layout_height="wrap_content"
        android:layout_below="@id/venueLat"
        android:layout_marginBottom="10dp"
        android:hint="Venue Longitude"
        android:padding="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/createVenue"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Create Venue"/>
</RelativeLayout>
