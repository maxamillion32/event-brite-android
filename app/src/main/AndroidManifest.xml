<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.demo.eventbritedemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity android:name=".activity.LoginActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EventListActivity"
            android:label="Your Events"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoActionBar"/>
        <activity
            android:name=".activity.CreateNewEventActivity"
            android:label="Create Event"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.SearchEventActivity"
            android:label="Search by name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.CreateEventTicketActivity"
            android:label="Add Ticket"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.EventDetailActivity"
            android:label="Event Detail"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.CreateEventVenueActivity"
            android:label="Event Venue"
            android:screenOrientation="portrait"/>
    </application>

</manifest>